<!DOCTYPE html>
<html>
<head>
  <title>Hooked on Us: RSVP</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Meddon" %>
  <%= javascript_include_tag :defaults %>
  <%= active_scaffold_includes %>
  <%= csrf_meta_tag %>
</head>

<body id="rsvp">

<div id="wrapper">
  <div id="header">
    <div class="rsvp">RSVP</div>
    <div class="hou">Hooked on Us</div>
  </div>
  <% if current_person and !request.path.start_with? "/admin/" %>
    <div id="person_bar" class="bar">
      Hello, <%= current_person.name %>
    </div>
  <% end %>
  <div id="main">
    <%= show_flash %>
    <%= yield %>
  </div>
  <% if current_user %>
    <div id="admin_bar" class="bar">
    Hello there, <%= current_user.name %>.
    <%= link_to "Admin panel", :admin_root %> | <%= link_to "Logout", :admin_logout %>
    </div>
  <% end %>
</div>

</body>
</html>
